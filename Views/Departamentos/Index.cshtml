@model IEnumerable<activos.Models.Departamento>

@{
    ViewData["Title"] = "Departamento";
}

<h1>Gestor de Departamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Crear un nuevo Departamento</a>
</p>

<form asp-controller="Departamentos" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar_departamento" class="form-text" />
        <input type="submit" value="Buscar" class="btn-sm btn-dark" />
    </p>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
                <td class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@item.Id_departamento" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_departamento" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_departamento" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
