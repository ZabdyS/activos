@model activos.Models.Departamento

@{
    ViewData["Title"] = "Create";
}

 <h1>Crear departamento</h1>
<h4 class="text-center">Departamento</h4>

<hr />
<div class="row justify-content-center my-5">

    <div class="col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Inserte el nombre del departamento" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div> 

 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
